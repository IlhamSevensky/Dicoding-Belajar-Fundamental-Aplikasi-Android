<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.ilham.made.consumerfavorite.ui.movie.MovieFragment"
        android:label="@string/title_movie_tab"
        tools:layout="@layout/fragment_movie">
    </fragment>

    <fragment
        android:id="@+id/navigation_tvshow"
        android:name="com.ilham.made.consumerfavorite.ui.tvshow.TvShowFragment"
        android:label="@string/title_tvshow_tab"
        tools:layout="@layout/fragment_tv_show">
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.ilham.made.consumerfavorite.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite_tab"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_favorite_movie"
        android:name="com.ilham.made.consumerfavorite.ui.favorite.movie.FavoriteMovieFragment"
        android:label="fragment_favorite_movie"
        tools:layout="@layout/fragment_favorite_movie" >
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite_tvshow"
        android:name="com.ilham.made.consumerfavorite.ui.favorite.tvshow.FavoriteTvShowFragment"
        android:label="fragment_favorite_tv_show"
        tools:layout="@layout/fragment_favorite_tv_show" >
    </fragment>

    <activity
        android:id="@+id/navigation_detail"
        android:name="com.ilham.made.consumerfavorite.ui.detail.DetailActivity"
        android:label="Detail"
        tools:layout="@layout/activity_detail">
    </activity>


</navigation>